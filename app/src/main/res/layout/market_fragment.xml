<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/tools">

    <data>

        <import
                alias="V"
                type="android.view.View"/>

        <variable
                name="vm"
                type="com.example.xmaster.ui.news.market.MarketViewModel"/>

    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:refreshState="@{vm.mLoad.status}"
            bind:onRefresh="@{vm.mOnRefreshListener}"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:data="@{vm.mCoins.data}"/>

            <include
                    layout="@layout/v_error"/>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>